<p id="notice"><%= notice %></p>

<h1>Decks</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @decks.each do |deck| %>
      <%= form_tag set_current_path do %>
        <tr>
          <td><%= deck.title %></td>
          <td><%= link_to 'Show', deck %></td>
          <td><%= link_to 'Edit', edit_deck_path(deck) %></td>
          <td><%= hidden_field_tag 'id', deck.id %></td>
          <td><%= link_to 'Destroy', deck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><div class='submit-tag'><%= submit_tag "Set current" %></div></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Deck', new_deck_path %>
