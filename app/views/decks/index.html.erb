<p id="notice"><%= notice %></p>

<h1>Decks</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @decks.each do |deck| %>
      <%= form_tag set_current_deck_path(deck.id) do %>
        <tr>
          <td><%= deck.title %></td>
          <td><%= link_to 'Show', deck %></td>
          <td><%= link_to 'Edit', edit_deck_path(deck) %></td>
          <td><%= link_to 'Destroy', deck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= hidden_field_tag 'id', deck.id %></td>
          <td><%= hidden_field_tag 'user_id', current_user.id %></td>
          <td><%= submit_tag 'Set current', name: 'Submit' %></td>
        </tr>
      <% end %>
  <% end %>
  <%= link_to 'New Deck', new_deck_path %>
  </tbody>
</table>
